<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_view">

        <item name="android:layout_width">wrap_content</item>

        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="card_tv_title" parent="@style/text_view">

        <item name="android:textSize">20.0dip</item>

        <item name="android:textColor">@color/card_title_color</item>

    </style>

    <style name="card_tv_top_title" parent="@style/text_view">

        <item name="android:textSize">20.0dip</item>

        <item name="android:textColor">@color/pure_black_40_opacity</item>

    </style>

    <style name="card_tv_subtitle" parent="@style/text_view">

        <item name="android:textSize">15.0dip</item>

        <item name="android:textColor">@color/card_title_color</item>
    </style>

    <style name="card_tv_top_subtitle" parent="@style/text_view">

        <item name="android:textSize">15.0dip</item>

        <item name="android:textColor">@color/pure_black_40_opacity</item>
    </style>
</resources>
